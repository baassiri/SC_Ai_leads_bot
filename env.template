# SC AI Lead Generation System - Environment Variables
# IMPORTANT: Never commit this file to git with real credentials!

# ===========================
# APPLICATION SETTINGS
# ===========================
FLASK_APP=backend/app.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# ===========================
# DATABASE CONFIGURATION
# ===========================
# For development (SQLite)
DATABASE_URL=sqlite:///data/database.db

# ===========================
# OPENAI API
# ===========================
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===========================
# LINKEDIN CREDENTIALS
# ===========================
# SECURITY: Use a dedicated LinkedIn account for scraping if possible
# WARNING: Remove password before sharing this file!
LINKEDIN_EMAIL=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password

# LinkedIn Sales Navigator Settings
SALES_NAVIGATOR_ENABLED=True
SCRAPE_DELAY_MIN=2
SCRAPE_DELAY_MAX=5
MAX_LEADS_PER_SESSION=100

# ===========================
# HUBSPOT CRM INTEGRATION
# ===========================
HUBSPOT_API_KEY=your-hubspot-api-key-here
HUBSPOT_ENABLED=False

# ===========================
# AUTOMATION SETTINGS
# ===========================
# Message sending rate limits (to avoid LinkedIn restrictions)
MESSAGES_PER_HOUR=10
CONNECTION_REQUEST_LIMIT=10
FOLLOW_UP_DELAY_DAYS=3
MAX_FOLLOW_UPS=2

# ===========================
# LOGGING
# ===========================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===========================
# SECURITY
# ===========================
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000
